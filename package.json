{
  "name": "@splytech-io/aerospike",
  "version": "0.2.4",
  "description": "Splyt Aerospike Client",
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "dependencies": {
    "aerospike": "3.4.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.5",
    "@types/node": "^9.4.7",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "ts-node": "^7.0.0",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^5.1.0",
    "typescript": "^2.7.2"
  },
  "scripts": {
    "lint": "tslint --project .",
    "lint:fix": "tslint --project . --fix",
    "build": "tsc ",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "keywords": [
    "aerospike"
  ],
  "author": "Andrius Skerla",
  "license": "Apache-2.0",
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "verbose": true,
    "execMap": {
      "ts": "ts-node"
    },
    "watch": [
      "examples/*.ts",
      "*.ts",
      "index.ts"
    ],
    "ext": "ts"
  },
  "directories": {
    "example": "examples"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/splytech-io/node-aerospike.git"
  },
  "bugs": {
    "url": "https://github.com/splytech-io/node-aerospike/issues"
  },
  "homepage": "https://github.com/splytech-io/node-aerospike#readme"
}
