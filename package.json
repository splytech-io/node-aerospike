{
  "name": "@splytech-io/aerospike",
  "version": "0.3.0",
  "description": "Splyt Aerospike Client",
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "dependencies": {
    "aerospike": "^3.7.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.5",
    "@types/node": "^9.4.7",
    "chai": "^4.1.2",
    "husky": "^1.1.2",
    "lint-staged": "^7.3.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "ts-node": "^7.0.0",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^5.1.0",
    "typescript": "^2.7.2"
  },
  "scripts": {
    "lint": "tslint --project .",
    "lint:fix": "tslint --project . --fix",
    "build": "tsc ",
    "test": "nyc mocha --require ts-node/register 'src/*.spec.ts'",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "keywords": [
    "aerospike"
  ],
  "author": "Andrius Skerla",
  "license": "Apache-2.0",
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "verbose": true,
    "execMap": {
      "ts": "ts-node"
    },
    "watch": [
      "examples/*.ts",
      "*.ts",
      "index.ts"
    ],
    "ext": "ts"
  },
  "directories": {
    "example": "examples"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/splytech-io/node-aerospike.git"
  },
  "bugs": {
    "url": "https://github.com/splytech-io/node-aerospike/issues"
  },
  "homepage": "https://github.com/splytech-io/node-aerospike#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run build && npm run test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint -p . --fix",
      "git add"
    ]
  },
  "nyc": {
    "exclude": [
      "**/*.spec.ts"
    ],
    "include": [
      "src/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "all": true,
    "reporter": [
      "html",
      "text-summary"
    ]
  }
}
